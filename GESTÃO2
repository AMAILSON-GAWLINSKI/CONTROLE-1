        function initializeAtivosMergedChart() {
            const ctx = document.getElementById('ativosMergedChart');
            if (!ctx) return;
            
            // Agrupar ativos por status
            const statusCounts = {};
            appState.assets.forEach(asset => {
                if (statusCounts[asset.status]) {
                    statusCounts[asset.status]++;
                } else {
                    statusCounts[asset.status] = 1;
                }
            });
            
            const labels = Object.keys(statusCounts);
            const data = Object.values(statusCounts);
            
            // Cores baseadas no status
            const backgroundColors = labels.map(status => {
                switch(status) {
                    case 'Ativo': return 'rgba(40, 167, 69, 0.7)';
                    case 'Inativo': return 'rgba(220, 53, 69, 0.7)';
                    case 'Manutenção': return 'rgba(255, 193, 7, 0.7)';
                    case 'Reserva': return 'rgba(108, 117, 125, 0.7)';
                    default: return 'rgba(23, 162, 184, 0.7)';
                }
            });
            
            appState.charts.ativosMergedChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: backgroundColors,
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: true,
                            text: 'Status dos Ativos'
                        }
                    }
                }
            });
        }

        function updateAtivosMergedChart() {
            if (!appState.charts.ativosMergedChart) return;
            
            // Atualizar dados
            const statusCounts = {};
            appState.assets.forEach(asset => {
                if (statusCounts[asset.status]) {
                    statusCounts[asset.status]++;
                } else {
                    statusCounts[asset.status] = 1;
                }
            });
            
            const labels = Object.keys(statusCounts);
            const data = Object.values(statusCounts);
            
            appState.charts.ativosMergedChart.data.labels = labels;
            appState.charts.ativosMergedChart.data.datasets[0].data = data;
            
            // Atualizar cores
            appState.charts.ativosMergedChart.data.datasets[0].backgroundColor = labels.map(status => {
                switch(status) {
                    case 'Ativo': return 'rgba(40, 167, 69, 0.7)';
                    case 'Inativo': return 'rgba(220, 53, 69, 0.7)';
                    case 'Manutenção': return 'rgba(255, 193, 7, 0.7)';
                    case 'Reserva': return 'rgba(108, 117, 125, 0.7)';
                    default: return 'rgba(23, 162, 184, 0.7)';
                }
            });
            
            appState.charts.ativosMergedChart.update();
        }

        function initializeVacationRadarChart() {
            const ctx = document.getElementById('vacationRadarChart');
            if (!ctx) return;
            
            // Agrupar férias por status
            const statusCounts = {
                'Em Andamento': 0,
                'Concluído': 0,
                'Cancelado': 0,
                'Solicitado': 0
            };
            
            appState.vacations.forEach(vacation => {
                if (statusCounts.hasOwnProperty(vacation.status)) {
                    statusCounts[vacation.status]++;
                }
            });
            
            const labels = Object.keys(statusCounts);
            const data = Object.values(statusCounts);
            
            appState.charts.vacationRadarChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Solicitações de Férias',
                        data: data,
                        backgroundColor: 'rgba(76, 201, 240, 0.2)',
                        borderColor: 'rgba(76, 201, 240, 1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(76, 201, 240, 1)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Solicitações de Férias por Status'
                        }
                    },
                    scales: {
                        r: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function updateVacationRadarChart() {
            if (!appState.charts.vacationRadarChart) return;
            
            // Atualizar dados
            const statusCounts = {
                'Em Andamento': 0,
                'Concluído': 0,
                'Cancelado': 0,
                'Solicitado': 0
            };
            
            appState.vacations.forEach(vacation => {
                if (statusCounts.hasOwnProperty(vacation.status)) {
                    statusCounts[vacation.status]++;
                }
            });
            
            const data = Object.values(statusCounts);
            
            appState.charts.vacationRadarChart.data.datasets[0].data = data;
            appState.charts.vacationRadarChart.update();
        }

        function initializeVacationMonthChart() {
            const ctx = document.getElementById('vacationMonthChart');
            if (!ctx) return;
            
            // Agrupar férias por mês
            const monthCounts = {};
            appState.vacations.forEach(vacation => {
                if (vacation.start_date) {
                    const month = new Date(vacation.start_date).getMonth();
                    if (monthCounts[month]) {
                        monthCounts[month]++;
                    } else {
                        monthCounts[month] = 1;
                    }
                }
            });
            
            // Preencher meses faltantes
            const labels = ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'];
            const data = labels.map((_, index) => monthCounts[index] || 0);
            
            appState.charts.vacationMonthChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Férias por Mês',
                        data: data,
                        backgroundColor: 'rgba(246, 194, 62, 0.2)',
                        borderColor: 'rgba(246, 194, 62, 1)',
                        borderWidth: 2,
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Férias por Mês'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function updateVacationMonthChart() {
            if (!appState.charts.vacationMonthChart) return;
            
            // Atualizar dados
            const monthCounts = {};
            appState.vacations.forEach(vacation => {
                if (vacation.start_date) {
                    const month = new Date(vacation.start_date).getMonth();
                    if (monthCounts[month]) {
                        monthCounts[month]++;
                    } else {
                        monthCounts[month] = 1;
                    }
                }
            });
            
            const data = Array(12).fill(0).map((_, index) => monthCounts[index] || 0);
            
            appState.charts.vacationMonthChart.data.datasets[0].data = data;
            appState.charts.vacationMonthChart.update();
        }

        function initializeProjectDoughnutChart() {
            const ctx = document.getElementById('projectDoughnutChart');
            if (!ctx) return;
            
            // Agrupar projetos por status
            const statusCounts = {};
            appState.projects.forEach(project => {
                if (statusCounts[project.status]) {
                    statusCounts[project.status]++;
                } else {
                    statusCounts[project.status] = 1;
                }
            });
            
            const labels = Object.keys(statusCounts);
            const data = Object.values(statusCounts);
            
            // Cores baseadas no status
            const backgroundColors = labels.map(status => {
                switch(status) {
                    case 'Concluído': return 'rgba(40, 167, 69, 0.7)';
                    case 'Em Andamento': return 'rgba(23, 162, 184, 0.7)';
                    case 'Planejamento': return 'rgba(255, 193, 7, 0.7)';
                    case 'Pausado': return 'rgba(108, 117, 125, 0.7)';
                    case 'Cancelado': return 'rgba(220, 53, 69, 0.7)';
                    default: return 'rgba(111, 66, 193, 0.7)';
                }
            });
            
            appState.charts.projectDoughnutChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: backgroundColors,
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                        },
                        title: {
                            display: true,
                            text: 'Status dos Projetos'
                        }
                    }
                }
            });
        }

        function updateProjectDoughnutChart() {
            if (!appState.charts.projectDoughnutChart) return;
            
