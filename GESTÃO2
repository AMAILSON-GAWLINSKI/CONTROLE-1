    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Configuração do Supabase
        const supabaseUrl = 'https://fpvzadxpzefccnipezpq.supabase.co';
        const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImZwdnphZHhwemVmY2NuaXBlenBxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTk0NTk4MTQsImV4cCI6MjA3NTAzNTgxNH0.rUzjSlLZI1qYF1NoDhJhYidw9bdUPduVeBb_gcQdA7w';
        
        // Inicializar Supabase
        const supabase = window.supabase.createClient(supabaseUrl, supabaseKey);

        // Estado da aplicação
        const appState = {
            currentSection: 'dashboard',
            employees: [],
            extensions: [],
            assets: [],
            vacations: [],
            projects: [],
            currentEditingId: null,
            charts: {},
            syncInterval: null,
            isSyncing: false,
            lastSync: null,
            // Controle de alertas de reativação
            reactivationAlerts: JSON.parse(localStorage.getItem('reactivationAlerts')) || [],
            // Controle de seleção de ativos para QR Codes
            selectedAssets: new Set(),
            // Controle do QR Code atual
            currentQRCode: null,
            // Cache de QR Codes gerados
            qrCodeCache: new Map(),
            // Controle de exportação para evitar downloads duplicados
            isExporting: false
        };

        const vacationAlerts = {
            alerts: [],
            isModalOpen: false,
            
            checkVacationAlerts: function(vacations, employees) {
                const today = new Date();
                today.setHours(0, 0, 0, 0); // Zerar horas para comparar apenas datas
                
                const alerts = [];
                
                // Verificar férias que terminam em até 7 dias (RETORNO)
                vacations.forEach(vacation => {
                    if (vacation.status === 'Em Andamento') {
                        const endDate = new Date(vacation.end_date);
                        endDate.setHours(0, 0, 0, 0);
                        
                        const daysUntilReturn = Math.ceil((endDate - today) / (1000 * 60 * 60 * 24));
                        
                        if (daysUntilReturn >= 0 && daysUntilReturn <= 7) {
                            const employee = employees.find(emp => emp.id === vacation.employee_id);
                            if (employee) {
                                alerts.push({
                                    type: 'retorno',
                                    message: `${employee.name} retorna das férias em ${daysUntilReturn} ${daysUntilReturn === 1 ? 'dia' : 'dias'} (${this.formatDate(vacation.end_date)})`,
                                    employeeName: employee.name,
                                    returnDate: vacation.end_date,
                                    daysUntilReturn: daysUntilReturn,
                                    priority: daysUntilReturn <= 3 ? 'high' : 'medium'
                                });
                            }
                        }
                    }
                    
                    // Verificar férias que começam em 1 dia (BLOQUEIO)
                    if (vacation.status === 'Em Andamento') {
                        const startDate = new Date(vacation.start_date);
                        startDate.setHours(0, 0, 0, 0);
                        
                        const daysUntilStart = Math.ceil((startDate - today) / (1000 * 60 * 60 * 24));
                        
                        if (daysUntilStart === 1) {
                            const employee = employees.find(emp => emp.id === vacation.employee_id);
                            if (employee) {
                                alerts.push({
                                    type: 'bloqueio',
                                    message: `${employee.name} inicia férias amanhã (${this.formatDate(vacation.start_date)}) - BLOQUEAR ACESSOS`,
                                    employeeName: employee.name,
                                    startDate: vacation.start_date,
                                    daysUntilStart: daysUntilStart,
                                    priority: 'urgent'
                                });
                            }
                        }
                    }
                });
                
                this.alerts = alerts;
                this.updateAlertCounter(alerts.length);
                return alerts;
            },
            
            updateAlertCounter: function(alertCount) {
                const alertCountElement = document.getElementById('vacationAlertCount');
                if (alertCountElement) {
                    alertCountElement.textContent = alertCount;
                    alertCountElement.style.display = alertCount > 0 ? 'block' : 'none';
                }
            },
            
            showVacationAlertsModal: function() {
                // Prevenir múltiplas aberturas
                if (this.isModalOpen) return;
                this.isModalOpen = true;
                
                const modalBody = document.getElementById('vacationReturnAlerts');
                
                if (!modalBody) {
                    this.isModalOpen = false;
                    return;
                }
                
                // Obter alertas atuais
                const alerts = this.checkVacationAlerts(appState.vacations, appState.employees);
                
                if (alerts.length === 0) {
                    modalBody.innerHTML = '<p class="text-center">Nenhum alerta de férias no momento.</p>';
                } else {
                    let alertsHTML = '';
                    
                    const returnAlerts = alerts.filter(alert => alert.type === 'retorno');
                    const blockAlerts = alerts.filter(alert => alert.type === 'bloqueio');
                    
                    if (returnAlerts.length > 0) {
                        alertsHTML += '<h6 class="mb-3"><i class="fas fa-undo-alt me-2"></i>Retorno de Férias</h6>';
                        returnAlerts.forEach(alert => {
                            const badgeClass = alert.daysUntilReturn <= 1 ? 'bg-danger' : 
                                             alert.daysUntilReturn <= 3 ? 'bg-warning' : 'bg-info';
                            const badgeText = alert.daysUntilReturn === 0 ? 'HOJE' : 
                                            alert.daysUntilReturn === 1 ? '1 dia' : `${alert.daysUntilReturn} dias`;
                            
                            alertsHTML += `
                                <div class="vacation-alert-item alert-retorno">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>${alert.employeeName}</strong>
                                            <div class="text-muted small">${alert.message}</div>
                                        </div>
                                        <span class="badge ${badgeClass}">${badgeText}</span>
                                    </div>
                                </div>
                            `;
                        });
                    }
                    
                    if (blockAlerts.length > 0) {
                        if (returnAlerts.length > 0) {
                            alertsHTML += '<hr class="my-3">';
                        }
                        alertsHTML += '<h6 class="mb-3"><i class="fas fa-lock me-2 text-danger"></i>Bloqueio de Acesso - ATENÇÃO</h6>';
                        blockAlerts.forEach(alert => {
                            alertsHTML += `
                                <div class="vacation-alert-item alert-bloqueio">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong class="text-danger">${alert.employeeName}</strong>
                                            <div class="text-muted small">${alert.message}</div>
                                            <small class="text-danger"><i class="fas fa-exclamation-triangle me-1"></i>Bloquear acessos: e-mail, sistemas, crachá</small>
                                        </div>
                                        <span class="badge bg-danger">AMANHÃ</span>
                                    </div>
                                </div>
                            `;
                        });
                    }
                    
                    modalBody.innerHTML = alertsHTML;
                }
                
                // Mostrar o modal
                const modalElement = document.getElementById('vacationReturnModal');
                if (modalElement) {
                    const modal = new bootstrap.Modal(modalElement);
                    modal.show();
                    
                    // Quando o modal for fechado, resetar o estado
                    modalElement.addEventListener('hidden.bs.modal', () => {
                        this.isModalOpen = false;
                    }, { once: true });
                } else {
                    this.isModalOpen = false;
                }
            },
            
            formatDate: function(dateString) {
                if (!dateString) return 'N/A';
                const date = new Date(dateString);
                if (isNaN(date.getTime())) return 'N/A';
                
                const day = date.getDate().toString().padStart(2, '0');
                const month = (date.getMonth() + 1).toString().padStart(2, '0');
                const year = date.getFullYear();
                
                return `${day}/${month}/${year}`;
            },
            
            initialize: function() {
                // Botão de alertas no header
                const vacationAlertButton = document.getElementById('vacationAlertButton');
                if (vacationAlertButton) {
                    // Remover event listeners anteriores clonando o botão
                    const newButton = vacationAlertButton.cloneNode(true);
                    vacationAlertButton.parentNode.replaceChild(newButton, vacationAlertButton);
                    
                    newButton.addEventListener('click', () => {
                        this.showVacationAlertsModal();
                    });
                }
                
                // Verificar alertas a cada 30 segundos
                setInterval(() => {
                    this.checkVacationAlerts(appState.vacations, appState.employees);
                }, 30000);
            }
        };
            
        // Inicialização da aplicação
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
        });

        async function initializeApp() {
            try {
                console.log('Inicializando aplicação...');
                
                // Inicializar componentes básicos primeiro
                initializeNavigation();
                initializeRealTimeClock();
                
                // Configurar event listeners básicos
                setupBasicEventListeners();
                
                // Tentar carregar dados do Supabase
                await loadAllData();
                
                // Inicializar componentes que dependem dos dados - CORREÇÃO: ORDEM ALTERADA
                initializeModals();
                populateEmployeeDropdowns();
                initializeCharts();
                setupEventListeners();
                
                // Iniciar sincronização automática
                startAutoSync();

                // Inicializar sistema de alertas de férias
                vacationAlerts.initialize();
                
                // Verificar alertas imediatamente após inicializar
                vacationAlerts.checkVacationAlerts(appState.vacations, appState.employees);
                
                initializePonto();
                initializeAssetSelection();

                console.log('Aplicação inicializada com sucesso!');
                showAlert('Sistema carregado com sucesso!', 'success', 3000);
                
            } catch (error) {
                console.error('Erro na inicialização:', error);
                showAlert('Erro ao carregar o sistema. Verifique sua conexão.', 'error');
            }
        }

        // Sincronização automática
        function startAutoSync() {
            // Sincronizar a cada 60 segundos
            appState.syncInterval = setInterval(async () => {
                await syncData();
            }, 60000);
        }

        async function syncData() {
            if (appState.isSyncing) return;
            
            appState.isSyncing = true;
            updateSyncStatus('Sincronizando...', 'syncing');
            
            try {
                await loadAllData();
                appState.lastSync = new Date();
                updateSyncStatus('Sincronizado', 'success');
                
                // Verificar alertas após sincronização
                vacationAlerts.checkVacationAlerts(appState.vacations, appState.employees);
            } catch (error) {
                console.error('Erro na sincronização:', error);
                updateSyncStatus('Erro na sincronização', 'error');
            } finally {
                appState.isSyncing = false;
            }
        }

        function updateSyncStatus(text, status) {
            const syncIndicator = document.getElementById('syncIndicator');
            const syncText = document.getElementById('syncText');
            
            if (syncText) syncText.textContent = text;
            if (syncIndicator) {
                syncIndicator.className = 'sync-indicator';
                
                if (status === 'syncing') {
                    syncIndicator.classList.add('syncing');
                } else if (status === 'error') {
                    syncIndicator.classList.add('error');
                }
            }
        }

        // Navegação
        function initializeNavigation() {
            const sidebarLinks = document.querySelectorAll('.sidebar-menu a');
            const toggleSidebarBtn = document.getElementById('toggleSidebar');
            const sidebarOverlay = document.getElementById('sidebarOverlay');
            
            // Alternar sidebar
            if (toggleSidebarBtn) {
                toggleSidebarBtn.addEventListener('click', function() {
                    const sidebar = document.getElementById('sidebar');
                    const mainContent = document.getElementById('mainContent');
                    if (sidebar && mainContent) {
                        sidebar.classList.toggle('active');
                        sidebarOverlay.classList.toggle('active');
                        mainContent.classList.toggle('expanded');
                    }
                });
            }
            
            // Fechar sidebar ao clicar no overlay
            if (sidebarOverlay) {
                sidebarOverlay.addEventListener('click', function() {
                    const sidebar = document.getElementById('sidebar');
                    const mainContent = document.getElementById('mainContent');
                    if (sidebar && mainContent) {
                        sidebar.classList.remove('active');
                        sidebarOverlay.classList.remove('active');
                        mainContent.classList.remove('expanded');
                    }
                });
            }
            
            // Navegação entre seções
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Remover classe active de todos os links
                    sidebarLinks.forEach(l => l.classList.remove('active'));
                    
                    // Adicionar classe active ao link clicado
                    this.classList.add('active');
                    
                    // Obter a seção alvo
                    const targetSection = this.getAttribute('data-section');
                    
                    // Atualizar título da página
                    updatePageTitle(this.querySelector('span').textContent);
                    
                    // Mostrar a seção correspondente
                    showSection(targetSection);
                    
                    // Fechar sidebar no mobile após clicar em um link
                    if (window.innerWidth <= 992) {
                        const sidebar = document.getElementById('sidebar');
                        const mainContent = document.getElementById('mainContent');
                        const sidebarOverlay = document.getElementById('sidebarOverlay');
                        if (sidebar && mainContent && sidebarOverlay) {
                            sidebar.classList.remove('active');
                            sidebarOverlay.classList.remove('active');
                            mainContent.classList.remove('expanded');
                        }
                    }
                });
            });
            
            // Navegação das abas do dashboard
            const dashboardTabs = document.querySelectorAll('.dashboard-tab');
            if (dashboardTabs.length > 0) {
                dashboardTabs.forEach(tab => {
                    tab.addEventListener('click', function() {
                        const tabId = this.getAttribute('data-tab');
                        
                        // Remover classe active de todas as abas
                        dashboardTabs.forEach(t => t.classList.remove('active'));
                        
                        // Adicionar classe active à aba clicada
                        this.classList.add('active');
                        
                        // Mostrar o conteúdo correspondente
                        showDashboardTab(tabId);
                    });
                });
            }
        }

        function showSection(sectionId) {
            // Esconder todas as seções
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => section.classList.remove('active'));
            
            // Mostrar a seção selecionada
            const targetSection = document.getElementById(sectionId + 'Section');
            if (targetSection) {
                targetSection.classList.add('active');
                appState.currentSection = sectionId;
                
                // Carregar dados específicos da seção se necessário
                if (sectionId === 'dashboard') {
                    updateDashboardStats();
                    updateCharts();
                }
            }
        }

        function showDashboardTab(tabId) {
            // Esconder todos os conteúdos de abas
            const tabContents = document.querySelectorAll('.dashboard-tab-content');
            tabContents.forEach(content => content.classList.remove('active'));
            
            // Mostrar o conteúdo da aba selecionada
            const targetContent = document.getElementById(tabId + 'Tab');
            if (targetContent) {
                targetContent.classList.add('active');
            }
        }

        function updatePageTitle(title) {
            const pageTitle = document.getElementById('pageTitle');
            if (pageTitle) pageTitle.textContent = title;
        }

        function initializeRealTimeClock() {
            function updateClock() {
                const now = new Date();
                const timeString = now.toLocaleTimeString('pt-BR', { 
                    hour: '2-digit', 
                    minute: '2-digit',
                    second: '2-digit'
                });
                const dateString = now.toLocaleDateString('pt-BR', {
                    weekday: 'short',
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric'
                });
                
                const clockElement = document.getElementById('headerClock');
                if (clockElement) {
                    clockElement.innerHTML = `
                        <div style="text-align: right; line-height: 1.2;">
                            <div style="font-size: 0.9rem; font-weight: 500;">${timeString}</div>
                            <div style="font-size: 0.7rem; color: #6c757d;">${dateString}</div>
                        </div>
                    `;
                }
            }
            
            updateClock();
            setInterval(updateClock, 1000);
        }

        // Sistema de Alertas
        function showAlert(message, type = 'info', duration = 5000) {
            const alertContainer = document.getElementById('alertContainer');
            if (!alertContainer) return;
            
            const alertId = 'alert-' + Date.now();
            
            const alertTypes = {
                'success': { icon: 'fas fa-check-circle', class: 'alert-success' },
                'error': { icon: 'fas fa-exclamation-circle', class: 'alert-error' },
                'warning': { icon: 'fas fa-exclamation-triangle', class: 'alert-warning' },
                'info': { icon: 'fas fa-info-circle', class: 'alert-info' }
            };
            
            const alertConfig = alertTypes[type] || alertTypes.info;
            
            const alertHTML = `
                <div id="${alertId}" class="alert ${alertConfig.class}">
                    <i class="${alertConfig.icon} alert-icon"></i>
                    <div class="alert-content">${message}</div>
                    <button type="button" class="alert-close" onclick="closeAlert('${alertId}')">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            
            alertContainer.insertAdjacentHTML('beforeend', alertHTML);
            
            if (duration > 0) {
                setTimeout(() => {
                    closeAlert(alertId);
                }, duration);
            }
        }

        function closeAlert(alertId) {
            const alert = document.getElementById(alertId);
            if (alert) {
                alert.style.animation = 'slideInRight 0.3s ease reverse';
                setTimeout(() => {
                    if (alert.parentNode) {
                        alert.parentNode.removeChild(alert);
                    }
                }, 300);
            }
        }

        // Carregamento de dados do Supabase
        async function loadAllData() {
            try {
                console.log('Carregando dados do Supabase...');
                
                // Carregar funcionários
                const { data: employees, error: employeesError } = await supabase
                    .from('employees')
                    .select('*')
                    .order('name');
                
                if (employeesError) throw employeesError;
                appState.employees = employees || [];
                
                // Carregar ramais
                const { data: extensions, error: extensionsError } = await supabase
                    .from('extensions')
                    .select('*')
                    .order('number');
                
                if (extensionsError) throw extensionsError;
                appState.extensions = extensions || [];
                
                // Carregar ativos
                const { data: assets, error: assetsError } = await supabase
                    .from('assets')
                    .select('*')
                    .order('type');
                
                if (assetsError) throw assetsError;
                appState.assets = assets || [];
                
                // Carregar férias
                const { data: vacations, error: vacationsError } = await supabase
                    .from('vacations')
                    .select('*')
                    .order('start_date', { ascending: false });
                
                if (vacationsError) throw vacationsError;
                appState.vacations = vacations || [];
                
                // Carregar projetos
                const { data: projects, error: projectsError } = await supabase
                    .from('projects')
                    .select('*')
                    .order('deadline');
                
                if (projectsError) throw projectsError;
                appState.projects = projects || [];
                
                console.log('Dados carregados com sucesso:', {
                    employees: appState.employees.length,
                    extensions: appState.extensions.length,
                    assets: appState.assets.length,
                    vacations: appState.vacations.length,
                    projects: appState.projects.length
                });
                
                // Atualizar interfaces
                updateEmployeesTable();
                updateExtensionsTable();
                updateAssetsTable();
                updateVacationsTable();
                updateProjectsTable();
                updateDashboardStats();
                updateCharts();
                
            } catch (error) {
                console.error('Erro ao carregar dados:', error);
                throw error;
            }
        }

        // Funções para atualizar tabelas
        function updateEmployeesTable() {
            const tbody = document.getElementById('employeesTableBody');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            if (appState.employees.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" class="text-center">Nenhum funcionário cadastrado</td></tr>';
                return;
            }
            
            appState.employees.forEach(employee => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>#EMP-${employee.id.toString().padStart(3, '0')}</td>
                    <td>${employee.name}</td>
                    <td>${employee.email}</td>
                    <td>${employee.position}</td>
                    <td>${employee.department}</td>
                    <td><span class="status-badge ${getStatusClass(employee.status)}">${employee.status}</span></td>
                    <td class="action-buttons">
                        <button class="btn btn-sm btn-outline-primary" onclick="editEmployee(${employee.id})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteEmployee(${employee.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        function updateExtensionsTable() {
            const tbody = document.getElementById('extensionsTableBody');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            if (appState.extensions.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center">Nenhum ramal cadastrado</td></tr>';
                return;
            }
            
            // Enriquecer os dados dos ramais com o nome do funcionário e departamento
            const extensionsWithEmployee = appState.extensions.map(extension => {
                const employee = appState.employees.find(emp => emp.id === extension.employee_id);
                return {
                    ...extension,
                    employeeName: employee ? employee.name : 'N/A',
                    department: employee ? employee.department : 'N/A'
                };
            });
            
            // Ordenar pelo nome do funcionário
            extensionsWithEmployee.sort((a, b) => a.employeeName.localeCompare(b.employeeName));
            
            extensionsWithEmployee.forEach(extension => {
                // Verificar se é ramal compartilhado
                const isShared = extension.shared_employees && extension.shared_employees.length > 0;
                let sharedEmployeesText = 'Não';
                
                if (isShared) {
                    const sharedEmployees = extension.shared_employees.split(',').map(id => {
                        const emp = appState.employees.find(e => e.id == id);
                        return emp ? emp.name : 'N/A';
                    }).join(', ');
                    sharedEmployeesText = sharedEmployees;
                }
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>#EXT-${extension.id.toString().padStart(3, '0')}</td>
                    <td>${extension.number}</td>
                    <td>${extension.employeeName}</td>
                    <td>${sharedEmployeesText}</td>
                    <td>${extension.department}</td>
                    <td>${extension.location || 'N/A'}</td>
                    <td><span class="status-badge ${getStatusClass(extension.status)}">${extension.status}</span></td>
                    <td class="action-buttons">
                        <button class="btn btn-sm btn-outline-primary" onclick="editExtension(${extension.id})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteExtension(${extension.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        function updateAssetsTable() {
            const tbody = document.getElementById('assetsTableBody');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            if (appState.assets.length === 0) {
                tbody.innerHTML = '<tr><td colspan="12" class="text-center">Nenhum ativo cadastrado</td></tr>';
                return;
            }
            
            // Enriquecer os dados dos ativos com o nome do funcionário
            const assetsWithEmployee = appState.assets.map(asset => {
                const employee = appState.employees.find(emp => emp.id === asset.employee_id);
                return {
                    ...asset,
                    employeeName: employee ? employee.name : 'N/A'
                };
            });
            
            assetsWithEmployee.forEach(asset => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>
                        <input type="checkbox" class="form-check-input asset-checkbox" data-asset-id="${asset.id}">
                    </td>
                    <td>#AST-${asset.id.toString().padStart(3, '0')}</td>
                    <td>${asset.name}</td>
                    <td>${asset.type}</td>
                    <td>${asset.model}</td>
                    <td>${asset.inches || 'N/A'}</td>
                    <td>${asset.description || 'N/A'}</td>
                    <td>${asset.serial_number || 'N/A'}</td>
                    <td>${asset.employeeName}</td>
                    <td><span class="status-badge ${getStatusClass(asset.status)}">${asset.status}</span></td>
                    <td>
                        <button class="btn btn-sm btn-outline-info" onclick="viewQRCode(${asset.id})">
                            <i class="fas fa-qrcode"></i>
                        </button>
                    </td>
                    <td class="action-buttons">
                        <button class="btn btn-sm btn-outline-primary" onclick="editAsset(${asset.id})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteAsset(${asset.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        function updateVacationsTable() {
            const tbody = document.getElementById('vacationsTableBody');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            if (appState.vacations.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center">Nenhuma solicitação de férias</td></tr>';
                return;
            }
            
            // Enriquecer os dados das férias com o nome do funcionário
            const vacationsWithEmployee = appState.vacations.map(vacation => {
                const employee = appState.employees.find(emp => emp.id === vacation.employee_id);
                return {
                    ...vacation,
                    employeeName: employee ? employee.name : 'N/A'
                };
            });
            
            // Ordenar por data de início (mais recentes primeiro)
            vacationsWithEmployee.sort((a, b) => new Date(b.start_date) - new Date(a.start_date));
            
            vacationsWithEmployee.forEach(vacation => {
                const progress = calculateVacationProgress(vacation.start_date, vacation.end_date);
                const days = calculateVacationDays(vacation.start_date, vacation.end_date);
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>#VAC-${vacation.id.toString().padStart(3, '0')}</td>
                    <td>${vacation.employeeName}</td>
                    <td>${formatDate(vacation.start_date)}</td>
                    <td>${formatDate(vacation.end_date)}</td>
                    <td>
                        <div class="vacation-progress-container">
                            <div class="vacation-progress-label">
                                <span>${progress}%</span>
                            </div>
                            <div class="vacation-progress">
                                <div class="vacation-progress-bar-dynamic" style="width: ${progress}%"></div>
                            </div>
                        </div>
                    </td>
                    <td>${days}</td>
                    <td><span class="status-badge ${getStatusClass(vacation.status)}">${vacation.status}</span></td>
                    <td class="action-buttons">
                        <button class="btn btn-sm btn-outline-primary" onclick="editVacation(${vacation.id})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteVacation(${vacation.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        function updateProjectsTable() {
            const tbody = document.getElementById('projectsTableBody');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            if (appState.projects.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" class="text-center">Nenhum projeto cadastrado</td></tr>';
                return;
            }
            
            appState.projects.forEach(project => {
                // O responsável agora é armazenado como string (nome) em manager_id
                const managerName = project.manager_id; // Já é o nome
                const priorityClass = getPriorityClass(project.priority);
                const progress = project.progress || 0;
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>#PRJ-${project.id.toString().padStart(3, '0')}</td>
                    <td>${project.name}</td>
                    <td>${managerName}</td>
                    <td><span class="priority-badge ${priorityClass}">${project.priority}</span></td>
                    <td>
                        <div class="progress-container">
                            <div class="progress-label">
                                <span>Progresso</span>
                                <span>${progress}%</span>
                            </div>
                            <div class="progress">
                                <div class="project-progress-bar-dynamic" role="progressbar" style="width: ${progress}%" 
                                    aria-valuenow="${progress}" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </td>
                    <td><span class="status-badge ${getStatusClass(project.status)}">${project.status}</span></td>
                    <td class="action-buttons">
                        <button class="btn btn-sm btn-outline-primary" onclick="editProject(${project.id})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteProject(${project.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Utilitários
        function getStatusClass(status) {
            const statusMap = {
                'Ativo': 'status-active',
                'Inativo': 'status-inactive',
                'Férias': 'status-vacation',
                'Licença': 'status-pending',
                'Solicitado': 'status-pending',
                'Aprovado': 'status-approved',
                'Cancelado': 'status-cancelled',
                'Em Andamento': 'status-in-progress',
                'Concluído': 'status-completed',
                'Manutenção': 'status-maintenance',
                'Reserva': 'status-reserve',
                'Planejamento': 'status-pending',
                'Pausado': 'status-pending'
            };
            return statusMap[status] || 'status-pending';
        }

        function getPriorityClass(priority) {
            const priorityMap = {
                'Baixa': 'priority-low',
                'Média': 'priority-medium',
                'Alta': 'priority-high',
                'Urgente': 'priority-urgent'
            };
            return priorityMap[priority] || 'priority-medium';
        }

        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            
            // Se a string estiver no formato YYYY-MM-DD
            if (typeof dateString === 'string' && dateString.match(/^\d{4}-\d{2}-\d{2}$/)) {
                const [year, month, day] = dateString.split('-');
                return `${day}/${month}/${year}`;
            }
            
            // Para outros formatos, tenta converter para Date
            const date = new Date(dateString);
            if (isNaN(date.getTime())) {
                return 'N/A';
            }
            
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();
            
            return `${day}/${month}/${year}`;
        }

        // Formatar nome com iniciais maiúsculas
        function formatName(name) {
            if (!name) return '';
            return name.toLowerCase()
                .split(' ')
                .map(word => word.charAt(0).toUpperCase() + word.slice(1))
                .join(' ');
        }

        // Calcular progresso das férias
        function calculateVacationProgress(startDate, endDate) {
            if (!startDate || !endDate) return 0;
            
            const start = new Date(startDate);
            const end = new Date(endDate);
            const today = new Date();
            
            if (today < start) return 0;
            if (today > end) return 100;
            
            const totalVacationTime = end - start;
            const elapsedTime = today - start;
            
            return Math.min(Math.max(Math.round((elapsedTime / totalVacationTime) * 100), 0), 100);
        }

        // Calcular dias de férias
        function calculateVacationDays(startDate, endDate) {
            if (!startDate || !endDate) return 0;
            
            const start = new Date(startDate);
            const end = new Date(endDate);
            
            // Calcular diferença em dias
            const timeDiff = end - start;
            const daysDiff = Math.ceil(timeDiff / (1000 * 60 * 60 * 24)) + 1; // +1 para incluir o último dia
            
            return daysDiff;
        }

        // População de dropdowns
        function populateEmployeeDropdowns() {
            const employeeDropdowns = [
                'extensionEmployee',
                'assetEmployee',
                'vacationEmployee'
            ];
            
            employeeDropdowns.forEach(dropdownId => {
                const dropdown = document.getElementById(dropdownId);
                if (dropdown) {
                    // Salvar o valor atual antes de limpar
                    const currentValue = dropdown.value;
                    
                    // Limpar opções, mantendo a primeira (se houver)
                    dropdown.innerHTML = dropdownId === 'assetEmployee' 
                        ? '<option value="">Sem funcionário atribuído</option>'
                        : '<option value="">Selecione...</option>';
                    
                    // Adicionar funcionários ativos
                    appState.employees
                        .filter(emp => emp.status === 'Ativo')
                        .sort((a, b) => a.name.localeCompare(b.name))
                        .forEach(employee => {
                            const option = document.createElement('option');
                            option.value = employee.id;
                            option.textContent = employee.name;
                            dropdown.appendChild(option);
                        });
                    
                    // Restaurar o valor anterior se ainda existir
                    if (currentValue && Array.from(dropdown.options).some(opt => opt.value === currentValue)) {
                        dropdown.value = currentValue;
                    }
                }
            });
            
            // Populate shared extension dropdown
            const sharedExtensionDropdown = document.getElementById('extensionShared');
            if (sharedExtensionDropdown) {
                const currentValue = sharedExtensionDropdown.value;
                sharedExtensionDropdown.innerHTML = '<option value="">Selecione...</option>';
                
                appState.employees
                    .filter(emp => emp.status === 'Ativo')
                    .sort((a, b) => a.name.localeCompare(b.name))
                    .forEach(employee => {
                        const option = document.createElement('option');
                        option.value = employee.id;
                        option.textContent = employee.name;
                        sharedExtensionDropdown.appendChild(option);
                    });
                
                if (currentValue && Array.from(sharedExtensionDropdown.options).some(opt => opt.value === currentValue)) {
                    sharedExtensionDropdown.value = currentValue;
                }
            }
        }

        // Configuração de Event Listeners
        function setupBasicEventListeners() {
            // Botão de refresh do dashboard
            const refreshDashboardBtn = document.getElementById('refreshDashboard');
            if (refreshDashboardBtn) {
                refreshDashboardBtn.addEventListener('click', async () => {
                    refreshDashboardBtn.innerHTML = '<div class="loading-spinner"></div>';
                    try {
                        await syncData();
                        showAlert('Dashboard atualizado!', 'success');
                    } catch (error) {
                        showAlert('Erro ao atualizar dashboard', 'error');
                    } finally {
                        refreshDashboardBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Atualizar';
                    }
                });
            }
            
            // Search functionality
            setupSearchFunctionality();
        }

        function setupSearchFunctionality() {
            // Funcionários
            const searchEmployees = document.getElementById('searchEmployees');
            if (searchEmployees) {
                searchEmployees.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#employeesTableBody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }
            
            // Ramais
            const searchExtensions = document.getElementById('searchExtensions');
            if (searchExtensions) {
                searchExtensions.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#extensionsTableBody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }
            
            // Ativos
            const searchAssets = document.getElementById('searchAssets');
            if (searchAssets) {
                searchAssets.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#assetsTableBody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }
            
            // Férias
            const searchVacations = document.getElementById('searchVacations');
            if (searchVacations) {
                searchVacations.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#vacationsTableBody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }
            
            // Projetos
            const searchProjects = document.getElementById('searchProjects');
            if (searchProjects) {
                searchProjects.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#projectsTableBody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }
        }

        function setupEventListeners() {
            // Event listeners para formulários
            setupFormEventListeners();
            
            // Event listeners para exportação
            setupExportEventListeners();
            
            // Event listeners para importação CSV
            setupImportEventListeners();
        }

        function setupFormEventListeners() {
            // Funcionários
            const saveEmployeeBtn = document.getElementById('saveEmployee');
            if (saveEmployeeBtn) {
                saveEmployeeBtn.addEventListener('click', saveEmployee);
            }
            
            // Ramais
            const saveExtensionBtn = document.getElementById('saveExtension');
            if (saveExtensionBtn) {
                saveExtensionBtn.addEventListener('click', saveExtension);
            }
            
            // Ativos
            const saveAssetBtn = document.getElementById('saveAsset');
            if (saveAssetBtn) {
                saveAssetBtn.addEventListener('click', saveAsset);
            }
            
            // Férias
            const saveVacationBtn = document.getElementById('saveVacation');
            if (saveVacationBtn) {
                saveVacationBtn.addEventListener('click', saveVacation);
            }
            
            // Projetos
            const saveProjectBtn = document.getElementById('saveProject');
            if (saveProjectBtn) {
                saveProjectBtn.addEventListener('click', saveProject);
            }
            
            // Progresso do projeto
            const projectProgress = document.getElementById('projectProgress');
            const projectProgressValue = document.getElementById('projectProgressValue');
            
            if (projectProgress && projectProgressValue) {
                projectProgress.addEventListener('input', function() {
                    projectProgressValue.textContent = this.value + '%';
                });
            }
            
            // Lógica condicional para campos de ativos
            const assetTypeSelect = document.getElementById('assetType');
            if (assetTypeSelect) {
                assetTypeSelect.addEventListener('change', function() {
                    toggleAssetFields(this.value);
                });
            }
            
            // Atualizar departamento quando selecionar funcionário
            const assetEmployeeSelect = document.getElementById('assetEmployee');
            if (assetEmployeeSelect) {
                assetEmployeeSelect.addEventListener('change', function() {
                    updateDepartmentFromEmployee(this.value);
                });
            }
        }

        function setupExportEventListeners() {
            // Dashboard exports
            const exportPDFBtn = document.getElementById('exportPDF');
            const exportExcelBtn = document.getElementById('exportExcel');
            
            if (exportPDFBtn) exportPDFBtn.addEventListener('click', () => exportDashboard('pdf'));
            if (exportExcelBtn) exportExcelBtn.addEventListener('click', () => exportDashboard('excel'));
            
            // Funcionários exports
            const exportEmployeesPDFBtn = document.getElementById('exportEmployeesListPDF');
            const exportEmployeesExcelBtn = document.getElementById('exportEmployeesListExcel');
            
            if (exportEmployeesPDFBtn) exportEmployeesPDFBtn.addEventListener('click', () => exportEmployees('pdf'));
            if (exportEmployeesExcelBtn) exportEmployeesExcelBtn.addEventListener('click', () => exportEmployees('excel'));
            
            // Ramais exports
            const exportExtensionsPDFBtn = document.getElementById('exportExtensionsPDF');
            const exportExtensionsExcelBtn = document.getElementById('exportExtensionsExcel');
            
            if (exportExtensionsPDFBtn) exportExtensionsPDFBtn.addEventListener('click', () => exportExtensions('pdf'));
            if (exportExtensionsExcelBtn) exportExtensionsExcelBtn.addEventListener('click', () => exportExtensions('excel'));
            
            // Ativos exports
            const exportAssetsPDFBtn = document.getElementById('exportAssetsListPDF');
            const exportAssetsExcelBtn = document.getElementById('exportAssetsListExcel');
            
            if (exportAssetsPDFBtn) exportAssetsPDFBtn.addEventListener('click', () => exportAssets('pdf'));
            if (exportAssetsExcelBtn) exportAssetsExcelBtn.addEventListener('click', () => exportAssets('excel'));
            
            // Férias exports
            const exportVacationsPDFBtn = document.getElementById('exportVacationsListPDF');
            const exportVacationsExcelBtn = document.getElementById('exportVacationsListExcel');
            
            if (exportVacationsPDFBtn) exportVacationsPDFBtn.addEventListener('click', () => exportVacations('pdf'));
            if (exportVacationsExcelBtn) exportVacationsExcelBtn.addEventListener('click', () => exportVacations('excel'));
            
            // Projetos exports
            const exportProjectsPDFBtn = document.getElementById('exportProjectsListPDF');
            const exportProjectsExcelBtn = document.getElementById('exportProjectsListExcel');
            
            if (exportProjectsPDFBtn) exportProjectsPDFBtn.addEventListener('click', () => exportProjects('pdf'));
            if (exportProjectsExcelBtn) exportProjectsExcelBtn.addEventListener('click', () => exportProjects('excel'));
            
            // Gráficos específicos
            const exportEmployeesPDF = document.getElementById('exportEmployeesPDF');
            const exportEmployeesExcel = document.getElementById('exportEmployeesExcel');
            
            if (exportEmployeesPDF) exportEmployeesPDF.addEventListener('click', () => exportChart('employeeDoughnutChart', 'pdf'));
            if (exportEmployeesExcel) exportEmployeesExcel.addEventListener('click', () => exportChart('employeeDoughnutChart', 'excel'));
            
            const exportAssetsPDF = document.getElementById('exportAssetsPDF');
            const exportAssetsExcel = document.getElementById('exportAssetsExcel');
            
            if (exportAssetsPDF) exportAssetsPDF.addEventListener('click', () => exportChart('ativosPieChart', 'pdf'));
            if (exportAssetsExcel) exportAssetsExcel.addEventListener('click', () => exportChart('ativosPieChart', 'excel'));
        }

        function setupImportEventListeners() {
            // Importar funcionários via CSV
            const importEmployeesCSVBtn = document.getElementById('importEmployeesCSV');
            const csvEmployeesFileInput = document.getElementById('csvEmployeesFileInput');
            
            if (importEmployeesCSVBtn && csvEmployeesFileInput) {
                importEmployeesCSVBtn.addEventListener('click', () => {
                    csvEmployeesFileInput.click();
                });
                
                csvEmployeesFileInput.addEventListener('change', handleEmployeesCSVImport);
            }
            
            // Importar ativos via CSV
            const importAssetsCSVBtn = document.getElementById('importAssetsCSV');
            const csvFileInput = document.getElementById('csvFileInput');
            
            if (importAssetsCSVBtn && csvFileInput) {
                importAssetsCSVBtn.addEventListener('click', () => {
                    csvFileInput.click();
                });
                
                csvFileInput.addEventListener('change', handleAssetsCSVImport);
            }
        }

        // Inicialização de Modais
        function initializeModals() {
            // Limpar formulários quando modais são fechados
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                modal.addEventListener('hidden.bs.modal', function() {
                    const form = this.querySelector('form');
                    if (form) {
                        form.reset();
                        appState.currentEditingId = null;
                        
                        // Resetar campos condicionais
                        resetConditionalFields();
                    }
                });
            });
            
            // Inicializar campos condicionais
            initializeConditionalFields();
        }

        function initializeConditionalFields() {
            // Inicializar campos condicionais de ativos
            const assetTypeSelect = document.getElementById('assetType');
            if (assetTypeSelect) {
                toggleAssetFields(assetTypeSelect.value);
            }
        }

        function resetConditionalFields() {
            // Resetar campos condicionais de ativos
            const conditionalFields = document.querySelectorAll('.asset-specs-field, .conditional-field');
            conditionalFields.forEach(field => {
                field.style.display = 'none';
            });
        }

        function toggleAssetFields(assetType) {
            // Esconder todos os campos condicionais primeiro
            const computerSpecsField = document.getElementById('computerSpecsField');
            const monitorSpecsField = document.getElementById('monitorSpecsField');
            const assetInchesField = document.getElementById('assetInchesField');
            
            if (computerSpecsField) computerSpecsField.style.display = 'none';
            if (monitorSpecsField) monitorSpecsField.style.display = 'none';
            if (assetInchesField) assetInchesField.style.display = 'none';
            
            // Mostrar campos específicos baseados no tipo
            if (assetType === 'Notebook' || assetType === 'Desktop') {
                if (computerSpecsField) computerSpecsField.style.display = 'block';
                if (assetInchesField) assetInchesField.style.display = 'block';
                
                // Mostrar campos específicos para MAC se for um notebook ou desktop
                const macSpecificFields = document.getElementById('macSpecificFields');
                if (macSpecificFields) {
                    macSpecificFields.style.display = 'block';
                }
            } else if (assetType === 'Monitor') {
                if (monitorSpecsField) monitorSpecsField.style.display = 'block';
                if (assetInchesField) assetInchesField.style.display = 'block';
            } else if (assetType === 'Smartphone' || assetType === 'Tablet') {
                if (assetInchesField) assetInchesField.style.display = 'block';
            }
        }

        function updateDepartmentFromEmployee(employeeId) {
            const departmentField = document.getElementById('assetDepartment');
            if (!departmentField) return;
            
            if (!employeeId) {
                departmentField.value = '';
                return;
            }
            
            const employee = appState.employees.find(emp => emp.id == employeeId);
            if (employee) {
                departmentField.value = employee.department;
            } else {
                departmentField.value = '';
            }
        }

        // Funções CRUD
        async function saveEmployee() {
            const form = document.getElementById('employeeForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const employeeData = {
                name: formatName(document.getElementById('employeeName').value),
                email: document.getElementById('employeeEmail').value.toLowerCase(),
                position: document.getElementById('employeePosition').value,
                department: document.getElementById('employeeDepartment').value,
                status: document.getElementById('employeeStatus').value,
                updated_at: new Date().toISOString()
            };
            
            try {
                let result;
                
                if (appState.currentEditingId) {
                    // Atualizar funcionário existente
                    result = await supabase
                        .from('employees')
                        .update(employeeData)
                        .eq('id', appState.currentEditingId);
                } else {
                    // Criar novo funcionário
                    employeeData.created_at = new Date().toISOString();
                    result = await supabase
                        .from('employees')
                        .insert([employeeData]);
                }
                
                if (result.error) throw result.error;
                
                // Fechar modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('addEmployeeModal'));
                if (modal) modal.hide();
                
                // Recarregar dados
                await loadAllData();
                
                showAlert(
                    appState.currentEditingId 
                        ? 'Funcionário atualizado com sucesso!' 
                        : 'Funcionário cadastrado com sucesso!', 
                    'success'
                );
                
                appState.currentEditingId = null;
                
            } catch (error) {
                console.error('Erro ao salvar funcionário:', error);
                showAlert('Erro ao salvar funcionário: ' + error.message, 'error');
            }
        }

        async function saveExtension() {
            const form = document.getElementById('extensionForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const extensionData = {
                number: document.getElementById('extensionNumber').value,
                employee_id: document.getElementById('extensionEmployee').value,
                shared_employees: document.getElementById('extensionShared').value || null,
                location: document.getElementById('extensionLocation').value,
                status: document.getElementById('extensionStatus').value,
                updated_at: new Date().toISOString()
            };
            
            try {
                let result;
                
                if (appState.currentEditingId) {
                    // Atualizar ramal existente
                    result = await supabase
                        .from('extensions')
                        .update(extensionData)
                        .eq('id', appState.currentEditingId);
                } else {
                    // Criar novo ramal
                    extensionData.created_at = new Date().toISOString();
                    result = await supabase
                        .from('extensions')
                        .insert([extensionData]);
                }
                
                if (result.error) throw result.error;
                
                // Fechar modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('addExtensionModal'));
                if (modal) modal.hide();
                
                // Recarregar dados
                await loadAllData();
                
                showAlert(
                    appState.currentEditingId 
                        ? 'Ramal atualizado com sucesso!' 
                        : 'Ramal cadastrado com sucesso!', 
                    'success'
                );
                
                appState.currentEditingId = null;
                
            } catch (error) {
                console.error('Erro ao salvar ramal:', error);
                showAlert('Erro ao salvar ramal: ' + error.message, 'error');
            }
        }

        async function saveAsset() {
            const form = document.getElementById('assetForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const assetData = {
                name: document.getElementById('assetName').value,
                type: document.getElementById('assetType').value,
                model: document.getElementById('assetModel').value,
                inches: document.getElementById('assetInches').value || null,
                description: document.getElementById('assetDescription').value,
                serial_number: document.getElementById('assetSerial').value,
                employee_id: document.getElementById('assetEmployee').value || null,
                department: document.getElementById('assetDepartment').value,
                acquisition_date: document.getElementById('assetAcquisition').value,
                status: document.getElementById('assetStatus').value,
                updated_at: new Date().toISOString()
            };
            
            // Adicionar campos específicos baseados no tipo
            const assetType = assetData.type;
            
            if (assetType === 'Notebook' || assetType === 'Desktop') {
                assetData.processor = document.getElementById('assetProcessor').value;
                assetData.memory = document.getElementById('assetMemory').value;
                assetData.storage = document.getElementById('assetStorage').value;
                assetData.operating_system = document.getElementById('assetOS').value;
                assetData.mac_address = document.getElementById('assetMacModel').value;
            } else if (assetType === 'Monitor') {
                assetData.quality = document.getElementById('assetMonitorQuality').value;
            }
            
            try {
                let result;
                
                if (appState.currentEditingId) {
                    // Atualizar ativo existente
                    result = await supabase
                        .from('assets')
                        .update(assetData)
                        .eq('id', appState.currentEditingId);
                } else {
                    // Criar novo ativo
                    assetData.created_at = new Date().toISOString();
                    result = await supabase
                        .from('assets')
                        .insert([assetData]);
                }
                
                if (result.error) throw result.error;
                
                // Fechar modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('addAssetModal'));
                if (modal) modal.hide();
                
                // Recarregar dados
                await loadAllData();
                
                showAlert(
                    appState.currentEditingId 
                        ? 'Ativo atualizado com sucesso!' 
                        : 'Ativo cadastrado com sucesso!', 
                    'success'
                );
                
                appState.currentEditingId = null;
                
            } catch (error) {
                console.error('Erro ao salvar ativo:', error);
                showAlert('Erro ao salvar ativo: ' + error.message, 'error');
            }
        }

        async function saveVacation() {
            const form = document.getElementById('vacationForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const vacationData = {
                employee_id: document.getElementById('vacationEmployee').value,
                start_date: document.getElementById('vacationStart').value,
                end_date: document.getElementById('vacationEnd').value,
                status: document.getElementById('vacationStatus').value,
                updated_at: new Date().toISOString()
            };
            
            try {
                let result;
                
                if (appState.currentEditingId) {
                    // Atualizar férias existentes
                    result = await supabase
                        .from('vacations')
                        .update(vacationData)
                        .eq('id', appState.currentEditingId);
                } else {
                    // Criar nova solicitação de férias
                    vacationData.created_at = new Date().toISOString();
                    result = await supabase
                        .from('vacations')
                        .insert([vacationData]);
                }
                
                if (result.error) throw result.error;
                
                // Fechar modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('addVacationModal'));
                if (modal) modal.hide();
                
                // Recarregar dados
                await loadAllData();
                
                showAlert(
                    appState.currentEditingId 
                        ? 'Férias atualizadas com sucesso!' 
                        : 'Solicitação de férias criada com sucesso!', 
                    'success'
                );
                
                appState.currentEditingId = null;
                
            } catch (error) {
                console.error('Erro ao salvar férias:', error);
                showAlert('Erro ao salvar férias: ' + error.message, 'error');
            }
        }

        async function saveProject() {
            const form = document.getElementById('projectForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const projectData = {
                name: document.getElementById('projectName').value,
                description: document.getElementById('projectDescription').value,
                manager_id: document.getElementById('projectResponsible').value, // Agora é o nome do responsável
                start_date: document.getElementById('projectStart').value,
                deadline: document.getElementById('projectDeadline').value,
                priority: document.getElementById('projectPriority').value,
                progress: document.getElementById('projectProgress').value,
                status: document.getElementById('projectStatus').value,
                updated_at: new Date().toISOString()
            };
            
            try {
                let result;
                
                if (appState.currentEditingId) {
                    // Atualizar projeto existente
                    result = await supabase
                        .from('projects')
                        .update(projectData)
                        .eq('id', appState.currentEditingId);
                } else {
                    // Criar novo projeto
                    projectData.created_at = new Date().toISOString();
                    result = await supabase
                        .from('projects')
                        .insert([projectData]);
                }
                
                if (result.error) throw result.error;
                
                // Fechar modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('addProjectModal'));
                if (modal) modal.hide();
                
                // Recarregar dados
                await loadAllData();
                
                showAlert(
                    appState.currentEditingId 
                        ? 'Projeto atualizado com sucesso!' 
                        : 'Projeto criado com sucesso!', 
                    'success'
                );
                
                appState.currentEditingId = null;
                
            } catch (error) {
                console.error('Erro ao salvar projeto:', error);
                showAlert('Erro ao salvar projeto: ' + error.message, 'error');
            }
        }

        // Funções de Edição
        function editEmployee(id) {
            const employee = appState.employees.find(emp => emp.id === id);
            if (!employee) return;
            
            document.getElementById('employeeName').value = employee.name;
            document.getElementById('employeeEmail').value = employee.email;
            document.getElementById('employeePosition').value = employee.position;
            document.getElementById('employeeDepartment').value = employee.department;
            document.getElementById('employeeStatus').value = employee.status;
            
            appState.currentEditingId = id;
            
            const modal = new bootstrap.Modal(document.getElementById('addEmployeeModal'));
            modal.show();
        }

        function editExtension(id) {
            const extension = appState.extensions.find(ext => ext.id === id);
            if (!extension) return;
            
            document.getElementById('extensionNumber').value = extension.number;
            document.getElementById('extensionEmployee').value = extension.employee_id;
            document.getElementById('extensionShared').value = extension.shared_employees || '';
            document.getElementById('extensionLocation').value = extension.location || '';
            document.getElementById('extensionStatus').value = extension.status;
            
            appState.currentEditingId = id;
            
            const modal = new bootstrap.Modal(document.getElementById('addExtensionModal'));
            modal.show();
        }

        function editAsset(id) {
            const asset = appState.assets.find(ast => ast.id === id);
            if (!asset) return;
            
            document.getElementById('assetName').value = asset.name;
            document.getElementById('assetType').value = asset.type;
            document.getElementById('assetModel').value = asset.model;
            document.getElementById('assetInches').value = asset.inches || '';
            document.getElementById('assetDescription').value = asset.description || '';
            document.getElementById('assetSerial').value = asset.serial_number || '';
            document.getElementById('assetEmployee').value = asset.employee_id || '';
            document.getElementById('assetDepartment').value = asset.department || '';
            document.getElementById('assetAcquisition').value = asset.acquisition_date || '';
            document.getElementById('assetStatus').value = asset.status;
            
            // Preencher campos específicos baseados no tipo
            if (asset.type === 'Notebook' || asset.type === 'Desktop') {
                document.getElementById('assetProcessor').value = asset.processor || '';
                document.getElementById('assetMemory').value = asset.memory || '';
                document.getElementById('assetStorage').value = asset.storage || '';
                document.getElementById('assetOS').value = asset.operating_system || '';
                document.getElementById('assetMacModel').value = asset.mac_address || '';
            } else if (asset.type === 'Monitor') {
                document.getElementById('assetMonitorQuality').value = asset.quality || '';
            }
            
            // Atualizar campos condicionais
            toggleAssetFields(asset.type);
            
            appState.currentEditingId = id;
            
            const modal = new bootstrap.Modal(document.getElementById('addAssetModal'));
            modal.show();
        }

        function editVacation(id) {
            const vacation = appState.vacations.find(vac => vac.id === id);
            if (!vacation) return;
            
            document.getElementById('vacationEmployee').value = vacation.employee_id;
            document.getElementById('vacationStart').value = vacation.start_date;
            document.getElementById('vacationEnd').value = vacation.end_date;
            document.getElementById('vacationStatus').value = vacation.status;
            
            appState.currentEditingId = id;
            
            const modal = new bootstrap.Modal(document.getElementById('addVacationModal'));
            modal.show();
        }

        function editProject(id) {
            const project = appState.projects.find(proj => proj.id === id);
            if (!project) return;
            
            document.getElementById('projectName').value = project.name;
            document.getElementById('projectDescription').value = project.description || '';
            document.getElementById('projectResponsible').value = project.manager_id; // Agora é o nome
            document.getElementById('projectStart').value = project.start_date;
            document.getElementById('projectDeadline').value = project.deadline;
            document.getElementById('projectPriority').value = project.priority;
            document.getElementById('projectProgress').value = project.progress || 0;
            document.getElementById('projectProgressValue').textContent = (project.progress || 0) + '%';
            document.getElementById('projectStatus').value = project.status;
            
            appState.currentEditingId = id;
            
            const modal = new bootstrap.Modal(document.getElementById('addProjectModal'));
            modal.show();
        }

        // Funções de Exclusão
        async function deleteEmployee(id) {
            if (!confirm('Tem certeza que deseja excluir este funcionário?')) return;
            
            try {
                const { error } = await supabase
                    .from('employees')
                    .delete()
                    .eq('id', id);
                
                if (error) throw error;
                
                await loadAllData();
                showAlert('Funcionário excluído com sucesso!', 'success');
            } catch (error) {
                console.error('Erro ao excluir funcionário:', error);
                showAlert('Erro ao excluir funcionário: ' + error.message, 'error');
            }
        }

        async function deleteExtension(id) {
            if (!confirm('Tem certeza que deseja excluir este ramal?')) return;
            
            try {
                const { error } = await supabase
                    .from('extensions')
                    .delete()
                    .eq('id', id);
                
                if (error) throw error;
                
                await loadAllData();
                showAlert('Ramal excluído com sucesso!', 'success');
            } catch (error) {
                console.error('Erro ao excluir ramal:', error);
                showAlert('Erro ao excluir ramal: ' + error.message, 'error');
            }
        }

        async function deleteAsset(id) {
            if (!confirm('Tem certeza que deseja excluir este ativo?')) return;
            
            try {
                const { error } = await supabase
                    .from('assets')
                    .delete()
                    .eq('id', id);
                
                if (error) throw error;
                
                await loadAllData();
                showAlert('Ativo excluído com sucesso!', 'success');
            } catch (error) {
                console.error('Erro ao excluir ativo:', error);
                showAlert('Erro ao excluir ativo: ' + error.message, 'error');
            }
        }

        async function deleteVacation(id) {
            if (!confirm('Tem certeza que deseja excluir esta solicitação de férias?')) return;
            
            try {
                const { error } = await supabase
                    .from('vacations')
                    .delete()
                    .eq('id', id);
                
                if (error) throw error;
                
                await loadAllData();
                showAlert('Solicitação de férias excluída com sucesso!', 'success');
            } catch (error) {
                console.error('Erro ao excluir férias:', error);
                showAlert('Erro ao excluir férias: ' + error.message, 'error');
            }
        }

        async function deleteProject(id) {
            if (!confirm('Tem certeza que deseja excluir este projeto?')) return;
            
            try {
                const { error } = await supabase
                    .from('projects')
                    .delete()
                    .eq('id', id);
                
                if (error) throw error;
                
                await loadAllData();
                showAlert('Projeto excluído com sucesso!', 'success');
            } catch (error) {
                console.error('Erro ao excluir projeto:', error);
                showAlert('Erro ao excluir projeto: ' + error.message, 'error');
            }
        }

        // Dashboard e Gráficos
        function updateDashboardStats() {
            // Total de funcionários
            const totalEmployees = appState.employees.length;
            document.getElementById('totalEmployees').textContent = totalEmployees;
            
            // Total de ativos
            const totalAssets = appState.assets.length;
            document.getElementById('totalAssets').textContent = totalAssets;
            
            // Funcionários de férias
            const onVacation = appState.vacations.filter(vac => vac.status === 'Em Andamento').length;
            document.getElementById('onVacation').textContent = onVacation;
            
            // Tarefas pendentes (projetos em andamento + férias solicitadas)
            const pendingProjects = appState.projects.filter(proj => 
                proj.status === 'Em Andamento' || proj.status === 'Planejamento'
            ).length;
            const pendingVacations = appState.vacations.filter(vac => 
                vac.status === 'Solicitado'
            ).length;
            const pendingTasks = pendingProjects + pendingVacations;
            document.getElementById('pendingTasks').textContent = pendingTasks;
        }

        function initializeCharts() {
            // Gráfico de Visão Geral do Sistema
            initializeOverviewChart();
            
            // Gráfico de Funcionários por Departamento
            initializeEmployeeDoughnutChart();
            
            // Gráfico de Ativos
            initializeAtivosPieChart();
            
            // Gráfico de Status dos Ativos (mesclado)
            initializeAtivosMergedChart();
            
            // Gráficos de Férias
            initializeVacationRadarChart();
            initializeVacationMonthChart();
            
            // Gráficos de Projetos
            initializeProjectDoughnutChart();
            
            // Atualizar medidores de progresso
            updateProgressGauges();
        }

        function updateCharts() {
            // Atualizar todos os gráficos
            if (appState.charts.overviewChart) {
                updateOverviewChart();
            }
            
            if (appState.charts.employeeDoughnutChart) {
                updateEmployeeDoughnutChart();
            }
            
            if (appState.charts.ativosPieChart) {
                updateAtivosPieChart();
            }
            
            if (appState.charts.ativosMergedChart) {
                updateAtivosMergedChart();
            }
            
            if (appState.charts.vacationRadarChart) {
                updateVacationRadarChart();
            }
            
            if (appState.charts.vacationMonthChart) {
                updateVacationMonthChart();
            }
            
            if (appState.charts.projectDoughnutChart) {
                updateProjectDoughnutChart();
            }
            
            // Atualizar medidores de progresso
            updateProgressGauges();
        }

        function initializeOverviewChart() {
            const ctx = document.getElementById('overviewChart');
            if (!ctx) return;
            
            // Dados de exemplo para o gráfico de visão geral
            const data = {
                labels: ['Funcionários', 'Ativos', 'Férias', 'Projetos'],
                datasets: [{
                    label: 'Visão Geral do Sistema',
                    data: [
                        appState.employees.length,
                        appState.assets.length,
                        appState.vacations.filter(v => v.status === 'Em Andamento').length,
                        appState.projects.length
                    ],
                    backgroundColor: [
                        'rgba(67, 97, 238, 0.7)',
                        'rgba(76, 201, 240, 0.7)',
                        'rgba(246, 194, 62, 0.7)',
                        'rgba(231, 74, 59, 0.7)'
                    ],
                    borderColor: [
                        'rgba(67, 97, 238, 1)',
                        'rgba(76, 201, 240, 1)',
                        'rgba(246, 194, 62, 1)',
                        'rgba(231, 74, 59, 1)'
                    ],
                    borderWidth: 1
                }]
            };
            
            appState.charts.overviewChart = new Chart(ctx, {
                type: 'bar',
                data: data,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Visão Geral do Sistema'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function updateOverviewChart() {
            if (!appState.charts.overviewChart) return;
            
            appState.charts.overviewChart.data.datasets[0].data = [
                appState.employees.length,
                appState.assets.length,
                appState.vacations.filter(v => v.status === 'Em Andamento').length,
                appState.projects.length
            ];
            
            appState.charts.overviewChart.update();
        }

        function initializeEmployeeDoughnutChart() {
            const ctx = document.getElementById('employeeDoughnutChart');
            if (!ctx) return;
            
            // Agrupar funcionários por departamento
            const departments = {};
            appState.employees.forEach(employee => {
                if (departments[employee.department]) {
                    departments[employee.department]++;
                } else {
                    departments[employee.department] = 1;
                }
            });
            
            const labels = Object.keys(departments);
            const data = Object.values(departments);
            
            // Gerar cores dinamicamente
            const backgroundColors = generateColors(labels.length);
            
            appState.charts.employeeDoughnutChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: backgroundColors,
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                        },
                        title: {
                            display: true,
                            text: 'Funcionários por Departamento'
                        }
                    }
                }
            });
        }

        function updateEmployeeDoughnutChart() {
            if (!appState.charts.employeeDoughnutChart) return;
            
            // Atualizar dados
            const departments = {};
            appState.employees.forEach(employee => {
                if (departments[employee.department]) {
                    departments[employee.department]++;
                } else {
                    departments[employee.department] = 1;
                }
            });
            
            const labels = Object.keys(departments);
            const data = Object.values(departments);
            
            appState.charts.employeeDoughnutChart.data.labels = labels;
            appState.charts.employeeDoughnutChart.data.datasets[0].data = data;
            
            // Atualizar cores se necessário
            if (labels.length !== appState.charts.employeeDoughnutChart.data.datasets[0].backgroundColor.length) {
                appState.charts.employeeDoughnutChart.data.datasets[0].backgroundColor = generateColors(labels.length);
            }
            
            appState.charts.employeeDoughnutChart.update();
        }

