        }

        function updateProgressGauges() {
            // Calcular progresso médio dos projetos
            const totalProgress = appState.projects.reduce((sum, project) => sum + (project.progress || 0), 0);
            const averageProgress = appState.projects.length > 0 ? Math.round(totalProgress / appState.projects.length) : 0;
            
            // Atualizar medidores
            const overviewGaugeFill = document.getElementById('overviewGaugeFill');
            const overviewGaugeValue = document.getElementById('overviewGaugeValue');
            const projectsGaugeFill = document.getElementById('projectsGaugeFill');
            const projectsGaugeValue = document.getElementById('projectsGaugeValue');
            
            if (overviewGaugeFill && overviewGaugeValue) {
                overviewGaugeFill.style.width = `${averageProgress}%`;
                overviewGaugeValue.textContent = `${averageProgress}%`;
            }
            
            if (projectsGaugeFill && projectsGaugeValue) {
                projectsGaugeFill.style.width = `${averageProgress}%`;
                projectsGaugeValue.textContent = `${averageProgress}%`;
            }
        }

        // Utilitário para gerar cores
        function generateColors(count) {
            const baseColors = [
                '#4361ee', '#3a0ca3', '#4cc9f0', '#f6c23e', '#e74a3b',
                '#1cc88a', '#36b9cc', '#f8f9fc', '#5a5c69', '#6f42c1',
                '#e83e8c', '#fd7e14', '#20c997', '#6610f2', '#6f42c1'
            ];
            
            const colors = [];
            for (let i = 0; i < count; i++) {
                colors.push(baseColors[i % baseColors.length]);
            }
            
            return colors;
        }

        // Exportação de dados
        async function exportDashboard(format) {
            try {
                if (appState.isExporting) {
                    showAlert('Exportação em andamento, aguarde...', 'warning');
                    return;
                }
                
                appState.isExporting = true;
                
                if (format === 'pdf') {
                    await exportDashboardToPDF();
                } else if (format === 'excel') {
                    await exportDashboardToExcel();
                }
                
                appState.isExporting = false;
                showAlert('Dashboard exportado com sucesso!', 'success');
            } catch (error) {
                console.error('Erro ao exportar dashboard:', error);
                appState.isExporting = false;
                showAlert('Erro ao exportar dashboard: ' + error.message, 'error');
            }
        }

        async function exportDashboardToPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // Título
            doc.setFontSize(20);
            doc.text('Dashboard - Sistema de Gestão', 20, 20);
            
            // Data de exportação
            doc.setFontSize(10);
            doc.text(`Exportado em: ${new Date().toLocaleString('pt-BR')}`, 20, 30);
            
            // Estatísticas
            doc.setFontSize(16);
            doc.text('Estatísticas Gerais', 20, 50);
            
            doc.setFontSize(12);
            let yPosition = 65;
            
            const stats = [
                `Total de Funcionários: ${appState.employees.length}`,
                `Total de Ativos: ${appState.assets.length}`,
                `Funcionários de Férias: ${appState.vacations.filter(v => v.status === 'Em Andamento').length}`,
                `Projetos Ativos: ${appState.projects.filter(p => p.status === 'Em Andamento').length}`,
                `Tarefas Pendentes: ${appState.projects.filter(p => p.status === 'Planejamento').length + appState.vacations.filter(v => v.status === 'Solicitado').length}`
            ];
            
            stats.forEach(stat => {
                doc.text(stat, 20, yPosition);
                yPosition += 8;
            });
            
            // Adicionar gráficos (simplificado)
            yPosition += 10;
            doc.setFontSize(16);
            doc.text('Visão Geral dos Dados', 20, yPosition);
            
            // Salvar o PDF
            doc.save('dashboard_sistema_gestao.pdf');
        }

        async function exportDashboardToExcel() {
            // Criar workbook
            const wb = XLSX.utils.book_new();
            
            // Dados do dashboard
            const dashboardData = [
                ['Métrica', 'Valor'],
                ['Total de Funcionários', appState.employees.length],
                ['Total de Ativos', appState.assets.length],
                ['Funcionários de Férias', appState.vacations.filter(v => v.status === 'Em Andamento').length],
                ['Projetos Ativos', appState.projects.filter(p => p.status === 'Em Andamento').length],
                ['Tarefas Pendentes', appState.projects.filter(p => p.status === 'Planejamento').length + appState.vacations.filter(v => v.status === 'Solicitado').length]
            ];
            
            // Adicionar worksheet
            const ws = XLSX.utils.aoa_to_sheet(dashboardData);
            XLSX.utils.book_append_sheet(wb, ws, 'Dashboard');
            
            // Salvar arquivo
            XLSX.writeFile(wb, 'dashboard_sistema_gestao.xlsx');
        }

        // Exportações específicas por seção
        async function exportEmployees(format) {
            if (format === 'pdf') {
                await exportTableToPDF('employeesTable', 'lista_funcionarios.pdf');
            } else if (format === 'excel') {
                await exportTableToExcel(appState.employees, 'employees', 'lista_funcionarios.xlsx');
            }
        }

        async function exportExtensions(format) {
            if (format === 'pdf') {
                await exportTableToPDF('extensionsTable', 'lista_ramais.pdf');
            } else if (format === 'excel') {
                await exportTableToExcel(appState.extensions, 'extensions', 'lista_ramais.xlsx');
            }
        }

        async function exportAssets(format) {
            if (format === 'pdf') {
                await exportTableToPDF('assetsTable', 'lista_ativos.pdf');
            } else if (format === 'excel') {
                await exportTableToExcel(appState.assets, 'assets', 'lista_ativos.xlsx');
            }
        }

        async function exportVacations(format) {
            if (format === 'pdf') {
                await exportTableToPDF('vacationsTable', 'lista_ferias.pdf');
            } else if (format === 'excel') {
                await exportTableToExcel(appState.vacations, 'vacations', 'lista_ferias.xlsx');
            }
        }

        async function exportProjects(format) {
            if (format === 'pdf') {
                await exportTableToPDF('projectsTable', 'lista_projetos.pdf');
            } else if (format === 'excel') {
                await exportTableToExcel(appState.projects, 'projects', 'lista_projetos.xlsx');
            }
        }

        // Funções genéricas de exportação
        async function exportTableToPDF(tableId, filename) {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // Título
            doc.setFontSize(16);
            doc.text(filename.replace('.pdf', '').replace(/_/g, ' ').toUpperCase(), 20, 20);
            
            // Data
            doc.setFontSize(10);
            doc.text(`Exportado em: ${new Date().toLocaleString('pt-BR')}`, 20, 30);
            
            // Capturar a tabela com html2canvas
            const tableElement = document.getElementById(tableId);
            if (tableElement) {
                const canvas = await html2canvas(tableElement);
                const imgData = canvas.toDataURL('image/png');
                
                // Adicionar a imagem ao PDF
                const imgWidth = 180;
                const imgHeight = (canvas.height * imgWidth) / canvas.width;
                
                doc.addImage(imgData, 'PNG', 15, 40, imgWidth, imgHeight);
            }
            
            // Salvar o PDF
            doc.save(filename);
        }

        async function exportTableToExcel(data, sheetName, filename) {
            if (!data || data.length === 0) {
                showAlert('Nenhum dado para exportar', 'warning');
                return;
            }
            
            // Criar workbook
            const wb = XLSX.utils.book_new();
            
            // Converter dados para worksheet
            const ws = XLSX.utils.json_to_sheet(data);
            
            // Adicionar worksheet ao workbook
            XLSX.utils.book_append_sheet(wb, ws, sheetName);
            
            // Salvar arquivo
            XLSX.writeFile(wb, filename);
        }

        async function exportChart(chartId, format) {
            const chart = appState.charts[chartId];
            if (!chart) {
                showAlert('Gráfico não encontrado', 'error');
                return;
            }
            
            const canvas = document.getElementById(chartId);
            if (!canvas) return;
            
            if (format === 'pdf') {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                
                // Título
                doc.setFontSize(16);
                doc.text(`Gráfico - ${chart.options.plugins.title.text}`, 20, 20);
                
                // Data
                doc.setFontSize(10);
                doc.text(`Exportado em: ${new Date().toLocaleString('pt-BR')}`, 20, 30);
                
                // Adicionar gráfico
                const imgData = canvas.toDataURL('image/png');
                doc.addImage(imgData, 'PNG', 20, 40, 170, 150);
                
                doc.save(`grafico_${chartId}.pdf`);
                
            } else if (format === 'excel') {
                // Para Excel, exportar os dados do gráfico
                const data = chart.data.labels.map((label, index) => ({
                    Categoria: label,
                    Valor: chart.data.datasets[0].data[index]
                }));
                
                await exportTableToExcel(data, chartId, `dados_${chartId}.xlsx`);
            }
            
            showAlert('Gráfico exportado com sucesso!', 'success');
        }

        // Importação de CSV
        function handleEmployeesCSVImport(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const csvData = e.target.result;
                    const employees = parseEmployeesCSV(csvData);
                    
                    if (employees.length > 0) {
                        importEmployees(employees);
                    } else {
                        showAlert('Nenhum dado válido encontrado no arquivo CSV', 'warning');
                    }
                } catch (error) {
                    console.error('Erro ao processar CSV:', error);
                    showAlert('Erro ao processar arquivo CSV: ' + error.message, 'error');
                }
            };
            
            reader.readAsText(file);
            event.target.value = ''; // Resetar input
        }

        function handleAssetsCSVImport(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const csvData = e.target.result;
                    const assets = parseAssetsCSV(csvData);
                    
                    if (assets.length > 0) {
                        importAssets(assets);
                    } else {
                        showAlert('Nenhum dado válido encontrado no arquivo CSV', 'warning');
                    }
                } catch (error) {
                    console.error('Erro ao processar CSV:', error);
                    showAlert('Erro ao processar arquivo CSV: ' + error.message, 'error');
                }
            };
            
            reader.readAsText(file);
            event.target.value = ''; // Resetar input
        }

        function parseEmployeesCSV(csvData) {
            const lines = csvData.split('\n');
            const employees = [];
            
            // Verificar cabeçalho (assumindo que a primeira linha é cabeçalho)
            const headers = lines[0].split(',').map(h => h.trim().toLowerCase());
            
            // Mapear colunas esperadas
            const expectedColumns = ['nome', 'email', 'cargo', 'departamento', 'status'];
            
            // Verificar se todas as colunas esperadas estão presentes
            const missingColumns = expectedColumns.filter(col => !headers.includes(col));
            if (missingColumns.length > 0) {
                throw new Error(`Colunas obrigatórias faltando: ${missingColumns.join(', ')}`);
            }
            
            // Processar linhas de dados
            for (let i = 1; i < lines.length; i++) {
                const line = lines[i].trim();
                if (!line) continue;
                
                const values = line.split(',').map(v => v.trim());
                
                // Criar objeto funcionário
                const employee = {
                    name: formatName(values[headers.indexOf('nome')]),
                    email: values[headers.indexOf('email')].toLowerCase(),
                    position: values[headers.indexOf('cargo')],
                    department: values[headers.indexOf('departamento')],
                    status: values[headers.indexOf('status')] || 'Ativo',
                    created_at: new Date().toISOString(),
                    updated_at: new Date().toISOString()
                };
                
                // Validar dados obrigatórios
                if (!employee.name || !employee.email || !employee.position || !employee.department) {
                    console.warn(`Linha ${i + 1} ignorada: dados obrigatórios faltando`);
                    continue;
                }
                
                employees.push(employee);
            }
            
            return employees;
        }

        function parseAssetsCSV(csvData) {
            const lines = csvData.split('\n');
            const assets = [];
            
            // Verificar cabeçalho
            const headers = lines[0].split(',').map(h => h.trim().toLowerCase());
            
            // Colunas esperadas
            const expectedColumns = ['nome', 'tipo', 'modelo'];
            const missingColumns = expectedColumns.filter(col => !headers.includes(col));
            
            if (missingColumns.length > 0) {
                throw new Error(`Colunas obrigatórias faltando: ${missingColumns.join(', ')}`);
            }
            
            // Processar linhas
            for (let i = 1; i < lines.length; i++) {
                const line = lines[i].trim();
                if (!line) continue;
                
                const values = line.split(',').map(v => v.trim());
                
                const asset = {
                    name: values[headers.indexOf('nome')],
                    type: values[headers.indexOf('tipo')],
                    model: values[headers.indexOf('modelo')],
                    inches: headers.includes('polegadas') ? values[headers.indexOf('polegadas')] : null,
                    description: headers.includes('descricao') ? values[headers.indexOf('descricao')] : null,
                    serial_number: headers.includes('numero_serie') ? values[headers.indexOf('numero_serie')] : null,
                    status: headers.includes('status') ? values[headers.indexOf('status')] : 'Ativo',
                    created_at: new Date().toISOString(),
                    updated_at: new Date().toISOString()
                };
                
                // Validar dados obrigatórios
                if (!asset.name || !asset.type || !asset.model) {
                    console.warn(`Linha ${i + 1} ignorada: dados obrigatórios faltando`);
                    continue;
                }
                
                assets.push(asset);
            }
            
            return assets;
        }

        async function importEmployees(employees) {
            if (!employees.length) return;
            
            try {
                const { error } = await supabase
                    .from('employees')
                    .insert(employees);
                
                if (error) throw error;
                
                await loadAllData();
                showAlert(`${employees.length} funcionários importados com sucesso!`, 'success');
            } catch (error) {
                console.error('Erro ao importar funcionários:', error);
                showAlert('Erro ao importar funcionários: ' + error.message, 'error');
            }
        }

        async function importAssets(assets) {
            if (!assets.length) return;
            
            try {
                const { error } = await supabase
                    .from('assets')
                    .insert(assets);
                
                if (error) throw error;
                
                await loadAllData();
                showAlert(`${assets.length} ativos importados com sucesso!`, 'success');
            } catch (error) {
                console.error('Erro ao importar ativos:', error);
                showAlert('Erro ao importar ativos: ' + error.message, 'error');
            }
        }

        // Sistema de QR Code
        async function viewQRCode(assetId) {
            const asset = appState.assets.find(a => a.id === assetId);
            if (!asset) {
                showAlert('Ativo não encontrado', 'error');
                return;
            }
            
            try {
                // Verificar se já temos o QR Code em cache
                if (appState.qrCodeCache.has(assetId)) {
                    displayQRCode(asset, appState.qrCodeCache.get(assetId));
                    return;
                }
                
                // Gerar QR Code
                const qrCodeDataURL = await generateQRCode(asset);
                
                // Armazenar em cache
                appState.qrCodeCache.set(assetId, qrCodeDataURL);
                
                // Exibir QR Code
                displayQRCode(asset, qrCodeDataURL);
                
            } catch (error) {
                console.error('Erro ao gerar QR Code:', error);
                showAlert('Erro ao gerar QR Code: ' + error.message, 'error');
            }
        }

        function generateQRCode(asset) {
            return new Promise((resolve, reject) => {
                try {
                    // Criar dados para o QR Code
                    const qrData = {
                        id: asset.id,
                        name: asset.name,
                        type: asset.type,
                        model: asset.model,
                        serial: asset.serial_number,
                        status: asset.status,
                        employee: asset.employee_id ? appState.employees.find(e => e.id === asset.employee_id)?.name : 'N/A',
                        department: asset.department,
                        lastUpdate: new Date().toISOString()
                    };
                    
                    const qrText = JSON.stringify(qrData);
                    
                    // Gerar QR Code
                    QRCode.toDataURL(qrText, {
                        width: 256,
                        height: 256,
                        margin: 1,
                        color: {
                            dark: '#4361ee',
                            light: '#ffffff'
                        }
                    }, (err, url) => {
                        if (err) {
                            reject(err);
                        } else {
                            resolve(url);
                        }
                    });
                } catch (error) {
                    reject(error);
                }
            });
        }

        function displayQRCode(asset, qrCodeDataURL) {
            const modalLabel = document.getElementById('viewQRCodeModalLabel');
            const qrCodePreview = document.getElementById('qrCodePreview');
            const qrAssetInfo = document.getElementById('qrAssetInfo');
            
            if (modalLabel) {
                modalLabel.textContent = `QR Code - ${asset.name}`;
            }
            
            if (qrCodePreview) {
                qrCodePreview.innerHTML = `
                    <img src="${qrCodeDataURL}" alt="QR Code do Ativo ${asset.name}" class="img-fluid">
                `;
            }
            
            if (qrAssetInfo) {
                const employeeName = asset.employee_id 
                    ? appState.employees.find(e => e.id === asset.employee_id)?.name 
                    : 'N/A';
                    
                qrAssetInfo.innerHTML = `
                    <p><strong>Nome:</strong> ${asset.name}</p>
                    <p><strong>Tipo:</strong> ${asset.type}</p>
                    <p><strong>Modelo:</strong> ${asset.model}</p>
                    <p><strong>Nº Série:</strong> ${asset.serial_number || 'N/A'}</p>
                    <p><strong>Responsável:</strong> ${employeeName}</p>
                    <p><strong>Departamento:</strong> ${asset.department || 'N/A'}</p>
                    <p><strong>Status:</strong> ${asset.status}</p>
                `;
            }
            
            // Armazenar QR Code atual para download
            appState.currentQRCode = {
                dataURL: qrCodeDataURL,
                asset: asset
            };
            
            // Mostrar modal
            const modal = new bootstrap.Modal(document.getElementById('viewQRCodeModal'));
            modal.show();
        }

        // Download do QR Code
        document.getElementById('downloadQRCodeBtn')?.addEventListener('click', function() {
            if (!appState.currentQRCode) {
                showAlert('Nenhum QR Code disponível para download', 'warning');
                return;
            }
            
            const { dataURL, asset } = appState.currentQRCode;
            
            // Criar link de download
            const link = document.createElement('a');
            link.href = dataURL;
            link.download = `qr_code_${asset.name.replace(/\s+/g, '_').toLowerCase()}.png`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            showAlert('QR Code baixado com sucesso!', 'success');
        });

        // Sistema de seleção de ativos para QR Codes em lote
        function initializeAssetSelection() {
            const selectAllCheckbox = document.getElementById('selectAllCheckbox');
            const selectAllAssetsBtn = document.getElementById('selectAllAssets');
            const deselectAllAssetsBtn = document.getElementById('deselectAllAssets');
            const batchActions = document.getElementById('batchActions');
            const selectedCount = document.getElementById('selectedCount');
            const exportQRCodeBatchBtn = document.getElementById('exportQRCodeBatch');
            
            // Selecionar/Deselecionar todos
            if (selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function() {
                    const checkboxes = document.querySelectorAll('.asset-checkbox');
                    checkboxes.forEach(checkbox => {
                        checkbox.checked = this.checked;
                        updateAssetSelection(checkbox);
                    });
                    updateBatchActions();
                });
            }
            
            if (selectAllAssetsBtn) {
                selectAllAssetsBtn.addEventListener('click', function() {
                    const checkboxes = document.querySelectorAll('.asset-checkbox');
                    checkboxes.forEach(checkbox => {
                        checkbox.checked = true;
                        updateAssetSelection(checkbox);
                    });
                    updateBatchActions();
                });
            }
            
            if (deselectAllAssetsBtn) {
                deselectAllAssetsBtn.addEventListener('click', function() {
                    const checkboxes = document.querySelectorAll('.asset-checkbox');
                    checkboxes.forEach(checkbox => {
                        checkbox.checked = false;
                        updateAssetSelection(checkbox);
                    });
                    updateBatchActions();
                });
            }
            
            // Event listeners para checkboxes individuais
            document.addEventListener('change', function(e) {
                if (e.target.classList.contains('asset-checkbox')) {
                    updateAssetSelection(e.target);
                    updateBatchActions();
                }
            });
            
            // Exportar QR Codes em lote
            if (exportQRCodeBatchBtn) {
                exportQRCodeBatchBtn.addEventListener('click', exportQRCodeBatch);
            }
            
            function updateAssetSelection(checkbox) {
                const assetId = parseInt(checkbox.getAttribute('data-asset-id'));
                
                if (checkbox.checked) {
                    appState.selectedAssets.add(assetId);
                } else {
                    appState.selectedAssets.delete(assetId);
                }
            }
            
            function updateBatchActions() {
                const count = appState.selectedAssets.size;
                
                if (selectedCount) {
                    selectedCount.textContent = count;
                }
                
                if (batchActions) {
                    if (count > 0) {
                        batchActions.classList.add('active');
                    } else {
                        batchActions.classList.remove('active');
                    }
                }
                
                // Atualizar checkbox "Selecionar Todos"
                if (selectAllCheckbox) {
                    const totalCheckboxes = document.querySelectorAll('.asset-checkbox').length;
                    selectAllCheckbox.checked = count > 0 && count === totalCheckboxes;
                    selectAllCheckbox.indeterminate = count > 0 && count < totalCheckboxes;
                }
            }
        }

        async function exportQRCodeBatch() {
            if (appState.selectedAssets.size === 0) {
                showAlert('Selecione pelo menos um ativo para exportar QR Codes', 'warning');
                return;
            }
            
            try {
                showAlert(`Gerando ${appState.selectedAssets.size} QR Codes...`, 'info');
                
                // Criar ZIP
                const zip = new JSZip();
                let generatedCount = 0;
                
                // Gerar QR Code para cada ativo selecionado
                for (const assetId of appState.selectedAssets) {
                    const asset = appState.assets.find(a => a.id === assetId);
                    if (!asset) continue;
                    
                    try {
                        // Gerar ou obter QR Code do cache
                        let qrCodeDataURL;
                        if (appState.qrCodeCache.has(assetId)) {
                            qrCodeDataURL = appState.qrCodeCache.get(assetId);
                        } else {
                            qrCodeDataURL = await generateQRCode(asset);
                            appState.qrCodeCache.set(assetId, qrCodeDataURL);
                        }
                        
                        // Converter Data URL para blob
                        const response = await fetch(qrCodeDataURL);
                        const blob = await response.blob();
                        
                        // Adicionar ao ZIP
                        const fileName = `qr_code_${asset.name.replace(/\s+/g, '_').toLowerCase()}.png`;
                        zip.file(fileName, blob);
                        
                        generatedCount++;
                        
                    } catch (error) {
                        console.error(`Erro ao gerar QR Code para ${asset.name}:`, error);
                    }
                }
                
                if (generatedCount === 0) {
                    showAlert('Nenhum QR Code foi gerado', 'error');
                    return;
                }
                
                // Gerar arquivo ZIP
                const zipBlob = await zip.generateAsync({ type: 'blob' });
                
                // Criar link de download
                const link = document.createElement('a');
                link.href = URL.createObjectURL(zipBlob);
                link.download = `qr_codes_ativos_${new Date().toISOString().split('T')[0]}.zip`;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                // Limpar seleção
                appState.selectedAssets.clear();
                updateBatchActions();
                
                showAlert(`${generatedCount} QR Codes exportados com sucesso!`, 'success');
                
            } catch (error) {
                console.error('Erro ao exportar QR Codes em lote:', error);
                showAlert('Erro ao exportar QR Codes: ' + error.message, 'error');
            }
        }

        // Sistema de Controle de Ponto
        function initializePonto() {
            const calcularPontoBtn = document.getElementById('calcularPonto');
            if (calcularPontoBtn) {
                calcularPontoBtn.addEventListener('click', calcularPonto);
            }
        }

        function calcularPonto() {
            // Obter valores do formulário
            const entrada = document.getElementById('entrada-auto').value;
            const jornadaType = parseFloat(document.getElementById('jornada-type').value);
            const intervalo = parseInt(document.getElementById('intervalo-auto').value) || 60;
            const trabalhaSabado = document.getElementById('trabalha-sabado').checked;
            
            // Validar entrada
            if (!entrada) {
                showAlert('Por favor, informe o horário de entrada', 'warning');
                return;
            }
            
            // Converter entrada para minutos
            const [entradaHora, entradaMinuto] = entrada.split(':').map(Number);
            const entradaMinutos = entradaHora * 60 + entradaMinuto;
            
            // Calcular horários
            const jornadaMinutos = jornadaType * 60;
            
            // Saída para intervalo (metade da jornada antes do intervalo)
            const saidaIntervaloMinutos = entradaMinutos + (jornadaMinutos / 2) - (intervalo / 2);
            const saidaIntervalo = formatMinutesToTime(saidaIntervaloMinutos);
            
            // Retorno do intervalo
            const retornoIntervaloMinutos = saidaIntervaloMinutos + intervalo;
            const retornoIntervalo = formatMinutesToTime(retornoIntervaloMinutos);
            
            // Saída final
            const saidaMinutos = retornoIntervaloMinutos + (jornadaMinutos / 2) - (intervalo / 2);
            const saida = formatMinutesToTime(saidaMinutos);
            
            // Exibir resultados
            document.getElementById('entrada-resultado').textContent = entrada;
            document.getElementById('saida-intervalo-resultado').textContent = saidaIntervalo;
            document.getElementById('retorno-intervalo-resultado').textContent = retornoIntervalo;
            document.getElementById('saida-resultado').textContent = saida;
            
            // Mostrar resultados
            document.getElementById('resultado').style.display = 'block';
            
            // Verificar alertas de intervalo
            verificarAlertaIntervalo(intervalo);
        }

        function formatMinutesToTime(minutes) {
            const totalMinutes = Math.round(minutes);
            const hours = Math.floor(totalMinutes / 60) % 24;
            const mins = totalMinutes % 60;
            return `${hours.toString().padStart(2, '0')}:${mins.toString().padStart(2, '0')}`;
        }

        function verificarAlertaIntervalo(intervalo) {
            const alertaIntervalo = document.getElementById('alerta-intervalo');
            const alertaIntervaloTexto = document.getElementById('alerta-intervalo-texto');
            
            if (intervalo < 60) {
                alertaIntervaloTexto.textContent = 'Intervalo mínimo de 1 hora não atingido!';
                alertaIntervalo.style.display = 'block';
            } else if (intervalo > 120) {
                alertaIntervaloTexto.textContent = 'Intervalo máximo de 2 horas excedido!';
                alertaIntervalo.style.display = 'block';
            } else {
                alertaIntervalo.style.display = 'none';
            }
        }

        // Sistema de alertas de reativação
        function checkReactivationAlerts() {
            const today = new Date();
            const alerts = [];
            
            // Verificar funcionários que foram reativados recentemente
            appState.employees.forEach(employee => {
                if (employee.status === 'Ativo' && employee.last_inactive_date) {
                    const lastInactive = new Date(employee.last_inactive_date);
                    const daysSinceReactivation = Math.floor((today - lastInactive) / (1000 * 60 * 60 * 24));
                    
                    if (daysSinceReactivation <= 7) {
                        // Verificar se já existe um alerta para este funcionário
                        const existingAlert = appState.reactivationAlerts.find(
                            alert => alert.employeeId === employee.id && !alert.dismissed
                        );
                        
                        if (!existingAlert) {
                            alerts.push({
                                employeeId: employee.id,
                                employeeName: employee.name,
                                reactivationDate: employee.last_inactive_date,
                                daysSinceReactivation: daysSinceReactivation,
                                dismissed: false
                            });
                        }
                    }
                }
            });
            
            // Adicionar novos alertas
            alerts.forEach(alert => {
                appState.reactivationAlerts.push(alert);
            });
            
            // Salvar alertas no localStorage
            localStorage.setItem('reactivationAlerts', JSON.stringify(appState.reactivationAlerts));
            
            // Mostrar alertas não dispensados
            showReactivationAlerts();
        }

        function showReactivationAlerts() {
            const activeAlerts = appState.reactivationAlerts.filter(alert => !alert.dismissed);
            
            if (activeAlerts.length > 0) {
                // Mostrar o primeiro alerta não dispensado
                const alert = activeAlerts[0];
                showReactivationAlertModal(alert);
            }
        }

        function showReactivationAlertModal(alert) {
            const modal = new bootstrap.Modal(document.getElementById('reactivationAlertModal'));
            const messageElement = document.getElementById('reactivationAlertMessage');
            
            if (messageElement) {
                messageElement.textContent = 
                    `O colaborador ${alert.employeeName} foi reativado há ${alert.daysSinceReactivation} dias. ` +
                    `Verifique se todos os acessos foram restabelecidos corretamente.`;
            }
            
            // Configurar botão de confirmação
            const confirmBtn = document.getElementById('confirmReactivation');
            if (confirmBtn) {
                confirmBtn.onclick = function() {
                    // Marcar alerta como dispensado
                    alert.dismissed = true;
                    localStorage.setItem('reactivationAlerts', JSON.stringify(appState.reactivationAlerts));
                    modal.hide();
                    
                    // Mostrar próximo alerta, se houver
                    setTimeout(showReactivationAlerts, 1000);
                };
            }
            
            modal.show();
        }

        // Adicionar função global para fechar alertas
        window.closeAlert = closeAlert;
    </script>
</body>
</html>
